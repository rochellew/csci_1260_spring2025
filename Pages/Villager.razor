@page "/villager"

<h1>Animal Crossing Villager Generator</h1>
<p role="status">Your Villager is: <strong>@villagerName</strong></p>
<button class="btn btn-primary" @onclick="GenerateVillager">Get a Random Villager</button>

@code {
    private string villagerName = "";
    private string[] villagerNames = { "Tom Nook", "Isabelle", "K.K. Slider", "Celeste" };
    private Random random = new Random();

    private void GenerateVillager()
    {
        villagerName = villagerNames[random.Next(villagerNames.Length)];
    }
}