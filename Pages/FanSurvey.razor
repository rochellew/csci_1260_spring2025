@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using IntroToBlazor.Models

@page "/fansurvey"

<h1>Animal Crossing Fan Survey</h1>


@* <p>Villager Name</p>
<input @bind="villager.Name" />

<br>
<p>Villager Hobby</p>
